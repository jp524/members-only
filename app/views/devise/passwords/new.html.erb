<%= stylesheet_link_tag 'application',
'https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap',
 media: 'all', 'data-turbolinks-track' => true %>
 
 <div class="users-new">
   <div class="header">
    <%= button_to "View Posts", posts_path, method: :get %>
    <p>Odin Clubhouse</p>
    <span>
  </div>

  <div class="content">
    <h1>Forgot your password?</h1>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
