<% @posts.each do |post| %>
  <h2><%= post.title %></h2>
  <p><%= post.body %></p>
  <% if user_signed_in? %>
    <p>Written by: <%= post.user.name %></p>
  <% end %>
  <br>
<% end %>

<%= button_to "Write a New Post", new_post_path, method: :get%>
<% if !user_signed_in? %>
  <%= button_to "Log in", new_user_session_path, method: :get %>
<% end %>
<% if user_signed_in? %>
  <%= button_to "Log out", destroy_user_session_path, method: :delete  %>
<% end %>